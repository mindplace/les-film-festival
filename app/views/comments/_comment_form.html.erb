<%= form_for :comment, :url => movie_review_comments_path, html: { id: "comment_form", :method => :post} do |f| %>
<div class="row-xs-3 form_group">
  <%= f.label :body %>:
  <%= f.text_area :body, class: 'form-control' %>
</div>
<br>

  <%= f.submit "Submit comment", class: "btn btn-success"%>
<% end %>